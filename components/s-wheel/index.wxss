    width: 320px;
    height: 320px;
    position: relative;
    margin: 0 auto;
}

.wheel_wp image {
    display: block;
    width: 100%;
    height: 100%;
}

.wheel_wp .wheel_pointer {
    position: absolute;
    width: 77px;
    height: 95px;
    top: 50%;
    left: 50%;
    margin: -95rpx 0 0 -77rpx; 
