 mode="{{mode}}" createSpeed="{{createSpeed}}" 
 decimal="{{decimal}}" number="{{number}}" 
 time="{{time}}" readyTime="{{readyTime}}" min="{{min}}"
 max="{{max}}" bind:finish="success"></sol-packet-rain>