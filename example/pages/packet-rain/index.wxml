<!-- pages/packet-rain/index.wxml -->
<view class="container">
  <image mode="aspectFit" src="/assets/logo.png"></image>
  <view class='title'>Sol Weapp</view>
  <view>下雨动画</view>
</view>
<!-- 下雨动画组件 -->
