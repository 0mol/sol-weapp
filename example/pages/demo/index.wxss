.avater-center{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  width: 80%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}
.avater-user{
  width: 100rpx;
  height: 100rpx;
  position: relative;
}
.avater-user .avater-url{
 width: 100%;
 height: 100%;
 border-radius: 50%;
 position: relative;
 z-index: 10;
}
.avater-user::after,.avater-user::before{
  background: #fff;
  opacity: 0.5;
  content: '';
  border-radius: 50%;
  width: 100%;
  height: 100%;
  position: absolute;
  transform:scale(1.5);
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  z-index: 1;
}
.avater-user::after{
  background: #fff;
  transform: scale(1.2);
  z-index: 3;
  opacity: 0.4;
}
