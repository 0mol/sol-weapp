.slot-machine-container {
  position: relative;
  margin: 0 auto;
  z-index: 2;
  width: 550rpx;
  height: 520rpx;
  background: transparent url(https://tweapp.top1buyer.com/dg/weapp/main_bg_machine.png) bottom center no-repeat;
  background-size: cover
}
.slot-machine-container .reel-container {
  position: absolute;
  left: 60rpx;
  top: 178rpx;
  width: 434rpx;
  height: 282rpx;
  overflow: hidden
}
.slot-machine-container .reel-container .reel {
  position: absolute;
  width: 120rpx;
  height: 2160rpx;
  background: transparent url(https://tweapp.top1buyer.com/dg/weapp/reel_strip.png) 0 0 repeat-y;
  background-size: contain
}
.slot-machine-container .reel-container .reel0 {
  left: 10rpx
}
.slot-machine-container .reel-container .reel1 {
  left: 158rpx
}
.slot-machine-container .reel-container .reel2 {
  left: 304rpx
}
.slot-machine-container .reel-container .reel-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  background: transparent url(http://slotmachinescript.com/img/slotmachine1/reel_overlay.png) 0 0 repeat-y;
  background-size: cover
}
@keyframes bounce {
  40%,
  43% {
    animation-timing-function: cubic-bezier(.645,.045,.355,1);
    transform: translate3d(0,-40rpx,0)
  }
  70% {
    animation-timing-function: cubic-bezier(.645,.045,.355,1);
    transform: translate3d(0,20rpx,0)
  }
  to {
    animation-timing-function: cubic-bezier(.645,.045,.355,1);
    transform: translate3d(0,0rpx,0)
  }
}
.bounce {
  -webkit-animation-duration: 1s;
  animation-duration: 1s;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  -webkit-animation-name: bounce;
  animation-name: bounce;
  -webkit-transform-origin: center bottom;
  transform-origin: center bottom
}