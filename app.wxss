/**app.wxss**/
page {
  color: #333;
  font-size: 16px;
  background: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
  font-family: 'PingFang SC', 'Helvetica Neue', 'Helvetica', 'STHeiTi', Arial, 'Microsoft YaHei', sans-serif;
}

button,
input,
select,
textarea {
  color: inherit;
  font: inherit;
  margin: 0;
  vertical-align: middle;
}

.sol-button {
  appearance: none;
  border-radius: 4rpx;
  padding: 0 24rpx;
  border: 0;
  box-sizing: border-box;
  color: inherit;
  display: inline-block;
  font-size: 28rpx;
  height: 66rpx;
  line-height: 66rpx;
  outline: 0;
  overflow: hidden;
  position: relative;
  text-align: center;
  color: #333333;
  background-color: #fff;
  border: 1rpx solid #ebedf0;
}

.sol-button--danger {
  color: #fff;
  background-color: #de3535;

}